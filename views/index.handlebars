<h1>Da Burgers</h1>

<h2>Available</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <h1>These aren't devoured</h1>
    <p>{{this.burger_name}}</p>
      {{!-- {{> burgers/burger-block devoured=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
<h1>These are devoured</h1>
<p>{{this.burger_name}}</p>
      {{!-- {{> burgers/burger-block devoured=false}} --}}
    {{/if}}
  {{/each}}
</ul>

