<h1>Da Burgers</h1>

<h2>Available</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

